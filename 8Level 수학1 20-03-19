#include <iostream>
#include <string>

using namespace std;

int main()
{
	int n, a;
	cin >> n;

	if (n % 5 == 0)
		cout << n / 5;
	else
	{
		a = n / 5;
		do {
			if ((n - (a * 5)) % 3 == 0)
			{
				cout << a + (n - (a * 5)) / 3;
				break;
			}
			else
				a--;
		} while (a >= 0);
		if (a == -1)
			cout << -1;
	}
	return 0;
}
//설탕문제 푸는데 어제오늘 합쳐서 2시간넘게 걸린거 같다.....
-------------------------------------------------------------------------------------------
#include <iostream>
#include <string>

using namespace std;

int main()
{
	int n, sum = 1, cnt = 1;
	cin >> n;

	while (sum < n)
	{
		sum += cnt * 6;
		cnt++;
	}

	cout << cnt;
}
//이건 다른사람이 푼 것을 보고 이해하고 다시 작성한 것이다. 그 전에 2시간동안 작성한 코드지만 계속 틀려서 다른 분의 힘을 빌리기로 했다.
-------------------------------------------------------------------------------------------------
#include <iostream>
#include <string>

using namespace std;

int main()
{
	int a, b, v, day = 0, c_m = 0;
	cin >> a >> b >> v;

	while (1)
	{
		day++;
		c_m = c_m + a;
		if (c_m >= v)
			break;
		else
		{
			c_m = c_m - b;
		}		
	}
	cout << day;
	return 0;
}
//시간초과가 떠버렸다.. 이번에도 다른 사람의 코딩을 보고 공부하였다ㅠㅠ
#include <iostream>
#include <string>

using namespace std;

int main()
{
	int a, b, v, day = 0;
	cin >> a >> b >> v;

	if ((v - b) % (a - b) != 0)
		day = (((v - b) / (a - b)) + 1);
	else
		day = ((v - b) / (a - b));

	cout << day;
	return 0;
}
//달팽이가 올라간 길이는 day를 n으로 두고 계산해보면 v<=na+(n-1)b이다. 이걸 n에 풀어서 나열하면 (v-b) / (a-b) <= n 이 나오게 된다.
//이 값이 나머지 0이 안나오면 하루를 추가해준다.
